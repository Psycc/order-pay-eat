{
	"name": "order-pay-eat-server",
	"version": "0.1.0",
	"private": true,
	"main": "index.js",
	"scripts": {
		"start:prod": "npm run prod",
		"start:dev": "nodemon",
		"lint": "eslint '**/*.js'",
		"dev": "set NODE_ENV=development && npm-run-all build server-dev --silent",
		"prod": "set NODE_ENV=production && npm-run-all build --silent",
		"server-dev": "node --inspect ./dist",
		"server-prod": "node ./public",
		"build": "npm-run-all clean transpile",
		"clean": "rimraf public",
		"transpile": "babel ./src --out-dir dist"
	},
	"nodemonConfig": {
		"exec": "npm run dev",
		"watch": [
			"src/*"
		],
		"ignore": [
			"**/__tests__/**",
			"*.test.js",
			"*.spec.js"
		]
	},
	"babel": {
		"presets": [
			"@babel/preset-env"
		]
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.19.0",
		"cookie-parser": "^1.4.5",
		"cors": "^2.8.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.0.5"
	},
	"devDependencies": {
		"@babel/cli": "^7.15.4",
		"@babel/core": "^7.15.5",
		"@babel/preset-env": "^7.15.6",
		"babel-eslint": "^10.1.0",
		"babel-polyfill": "^6.26.0",
		"eslint": "^7.32.0",
		"nodemon": "^2.0.12",
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.2"
	}
}
